pipeline {
    agent any

    environment {
      AWS_REGION = 'us-east-1'
      ECR_URL = '932549231491.dkr.ecr.us-east-1.amazonaws.com'
      IMAGE_TAG = "node-app:vote-v${env.BUILD_NUMBER}"
      IMAGE_NAME = "${ECR_URL}/${IMAGE_TAG}"
    }


    stages {
        stage('Clone Repo') {
            steps {
                git credentialsId: 'github-creds', url: 'https://github.com/GeekZeno/upgrad_assignment.git',  branch: 'main'
            }
        }

        stage('Build and Push on Remote Server') {
            steps {
                sshagent(['app-key']) {
                    sh """
                        ssh -o StrictHostKeyChecking=no ubuntu@10.100.2.89 << EOF
                            # Use double quotes for variable expansion
                            cd upgrad_assignment/vote || { echo "Failed to enter vote directory"; exit 1; }

                            # Login to ECR (requires AWS CLI installed)
                            aws ecr get-login-password --region ${AWS_REGION} | docker login --username AWS --password-stdin ${ECR_URL}

                            # Build and push image
                            docker build -t ${IMAGE_NAME} .
                            docker push ${IMAGE_NAME}

                            echo "âœ… Image built and pushed: ${IMAGE_NAME}"
EOF
                    """
                }
            }
        }

        stage('Deploy to App Host') {
            steps {
                sshagent(['app-key']) {
                    sh """
                        ssh -o StrictHostKeyChecking=no ubuntu@10.100.2.89 << EOF
                            echo "ðŸŽ¯ Pulling latest image from ECR..."
                            aws ecr get-login-password --region ${AWS_REGION} | docker login --username AWS --password-stdin ${ECR_URL}
                            docker pull ${IMAGE_NAME}

                            echo "ðŸ›‘ Checking for running containers..."
                            CONTAINER_ID=\$(docker ps -f "name=vote-app" --format "{{.ID}}")

                            if [ ! -z "\$CONTAINER_ID" ]; then
                                echo "â¹ï¸ Stopping old container: \$CONTAINER_ID"
                                docker stop \$CONTAINER_ID

                                echo "ðŸ—‘ï¸ Removing old container"
                                docker rm \$CONTAINER_ID
                            else
                                echo "ðŸŸ¢ No running container found. Proceeding to start new one."
                            fi

                            echo "ðŸš€ Starting new container..."
                            docker run -d \\
                                --name vote-app \\
                                -p 80:80 \\
                                ${IMAGE_NAME}

                            echo "âœ… Deployment complete!"
EOF
                    """
                }
            }
        }
    }
}
